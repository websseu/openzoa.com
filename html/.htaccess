# URL Rewriting 활성화
RewriteEngine On

# 실제 파일이나 폴더가 있으면 그대로 접근
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# /brand/nobrand → /pages/brand.php?slug=nobrand
RewriteRule ^brand/([a-zA-Z0-9_-]+)/?$ pages/brand.php?slug=$1 [L,QSA]

# /store/{public_id} → /pages/store.php?id={public_id}
RewriteRule ^store/([0-9]+)/?$ pages/store.php?id=$1 [L,QSA]

# /search → /pages/search.php
RewriteRule ^search/?$ pages/search.php [L,QSA]